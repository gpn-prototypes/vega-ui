{
  "name": "vega-ui",
  "version": "0.0.1",
  "main": "index.js",
  "author": "csssr",
  "license": "MIT",
  "private": true,
  "engines": {
    "node": "^12.16.2",
    "yarn": "^1.22.4"
  },
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "coverage": "jest --all --coverage",
    "build:ts": "tsc --build tsconfig.build.json --verbose",
    "build:css": "postcss \"packages/**/*.css\" --dir dist --base ./packages --no-map",
    "build": "node scripts/build.js",
    "packages:clean": "lerna clean --yes && lerna exec \"rm -rf dist\" && rm -rf ./dist",
    "changelog": "changelog",
    "packages:diff": "lerna diff",
    "packages:version": "lerna version --conventional-commits --no-push --no-commit-hooks",
    "packages:bootstrap": "lerna bootstrap",
    "packages:link": "lerna link",
    "storybook": "start-storybook -p 6006",
    "storybook:build": "build-storybook -s ./.storybook/static",
    "prettier": "prettier --write ./**/*.{ts,tsx,css,js,jsx}",
    "lint:ts": "eslint --ext=.ts,.tsx .",
    "lint:ts:fix": "eslint --ext=.ts,.tsx . --fix",
    "lint:css": "stylelint ./packages ./.storybook",
    "lint:css:fix": "stylelint ./packages ./.storybook --fix",
    "lint:md": "remark . -o",
    "lint": "yarn run lint:ts && yarn run lint:css && yarn run lint:md",
    "lint:fix": "yarn run lint:ts:fix && yarn run lint:css:fix && yarn run lint:md",
    "nc": "hygen component new",
    "size": "yarn build && size-limit"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./node_modules/@gpn-prototypes/frontend-configs/git/commitizen.js"
    }
  },
  "workspaces": [
    "packages/hooks",
    "packages/components/icons",
    "packages/components/avatar",
    "packages/components/badge",
    "packages/components/button",
    "packages/components/checkbox",
    "packages/components/choice-group",
    "packages/components/file",
    "packages/components/radio",
    "packages/components/switch",
    "packages/components/tabs",
    "packages/components/text",
    "packages/components/text-field",
    "packages/components/informer",
    "packages/components/user",
    "packages/components/modal",
    "packages/components/carousel",
    "packages/components/dropdown",
    "packages/components/navigation-list",
    "packages/components/page-banner",
    "packages/components/page-footer",
    "packages/components/logo",
    "packages/components/form",
    "packages/components/timer",
    "packages/components/snack-bar",
    "packages/components/progress-spin",
    "packages/components/attach",
    "packages/components/loader",
    "packages/components/theme",
    "packages/components/scale-panel",
    "packages/components/animation",
    "packages/components/sidebar",
    "packages/components/dropzone",
    "packages/components/file-input",
    "packages/components"
  ],
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@babel/plugin-transform-runtime": "^7.10.1",
    "@babel/preset-typescript": "^7.10.1",
    "@emotion/babel-preset-css-prop": "^10.0.27",
    "@emotion/core": "^10.0.28",
    "@emotion/styled": "^10.0.27",
    "@gpn-prototypes/frontend-configs": "0.1.1",
    "@gpn-prototypes/vega-changelog": "^3.2.4",
    "@size-limit/preset-big-lib": "^4.5.0",
    "@storybook/addon-a11y": "^5.3.18",
    "@storybook/addon-actions": "^5.3.17",
    "@storybook/addon-knobs": "^5.3.17",
    "@storybook/addon-links": "^5.3.18",
    "@storybook/react": "^5.3.18",
    "@storybook/source-loader": "^5.3.18",
    "@testing-library/jest-dom": "^5.5.0",
    "@testing-library/react": "^10.0.3",
    "@types/jest": "^25.2.1",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.34",
    "@types/react-dom": "^16.9.8",
    "babel-loader": "^8.1.0",
    "commitizen": "^4.0.4",
    "cpx": "^1.5.0",
    "css-loader": "^3.5.2",
    "cz-customizable": "^6.2.0",
    "husky": "^4.2.5",
    "hygen": "^5.0.3",
    "lerna": "^3.20.2",
    "lint-staged": "^10.2.4",
    "postcss-cli": "^7.1.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "regenerator-runtime": "^0.13.5",
    "remark-cli": "^8.0.0",
    "remark-lint": "^7.0.0",
    "remark-preset-lint-recommended": "^4.0.0",
    "size-limit": "^4.5.0",
    "storybook-addon-performance": "^0.9.0",
    "storybook-addon-themes": "^5.2.0",
    "style-loader": "^1.1.4",
    "ts-loader": "^7.0.1",
    "typescript": "^3.8.3",
    "webpack": "^4.42.1"
  },
  "resolutions": {
    "tslib": "1.13.0"
  }
}
